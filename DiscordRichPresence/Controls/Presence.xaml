                    </Style.Triggers>
                </Style>
            </TextBox.Style>

        </TextBox>
        <TextBox
            x:Name="JoinSecretTextBox"
            HorizontalAlignment="Left"
            Height="23"
            Margin="340,69,0,0"
            TextWrapping="NoWrap"
            VerticalAlignment="Top"
            Width="150"
            MaxLines="1"
            VerticalContentAlignment="Center">

            <!-- https://stackoverflow.com/a/7433840 -->
            <!-- Seriously can't figure out how to make this properly -->
